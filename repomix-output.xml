CREATE FUNCTION public.get_public_board(p_share_token uuid)
RETURNS json
LANGUAGE plpgsql
SECURITY DEFINER
AS $$
DECLARE
  result json;
BEGIN
  SELECT json_build_object(
    'board', json_build_object(
      'id', b.id,
      'owner_id', b.owner_id,
      'name', b.name,
      'description', b.description,
      'cover_rotation_enabled', b.cover_rotation_enabled,
