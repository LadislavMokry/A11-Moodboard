      'og_image_path', b.og_image_path,
      'created_at', b.created_at,
      'updated_at', b.updated_at
    ),
    'owner', json_build_object(
      'id', p.id,
      'display_name', p.display_name,
      'avatar_url', p.avatar_url
    ),
    'images', COALESCE(
      (
        SELECT json_agg(
          json_build_object(
            'id', i.id,
            'board_id', i.board_id,
            'storage_path', i.storage_path,
            'caption', i.caption,
            'position', i.position,
