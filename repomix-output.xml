            <button
              className="rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground hover:bg-primary/90 transition-colors"
              onClick={this.handleReset}
            >
              Try again
            </button>
          )}
        </div>
      );
    }

    return this.props.children;
  }
}
