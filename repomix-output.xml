describe('BulkSelection', () => {
  beforeEach(() => {
    vi.clearAllMocks();
    vi.mocked(useAuth).mockReturnValue({
      user: mockUser,
      session: null,
      loading: false,
      signOut: vi.fn(),
      signInWithGoogle: vi.fn(),
    });
    vi.mocked(boardsService.getBoard).mockResolvedValue(mockBoard);
